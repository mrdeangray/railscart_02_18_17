
<table class='table'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @objectives.each do |objective| %>
    <%if objective.completed_at.nil?%>
      <tr>
        <td><%= objective.title %></td>
        <td><%= objective.category %></td>
        <td><%= link_to 'Mark As Completed', mark_as_complete_objective_path(objective) %></td>
        <td><%= link_to 'Show', objective %></td>
        <td><%= link_to 'Edit', edit_objective_path(objective) %></td>
        <td><%= link_to 'Destroy', objective, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
  
   <tbody>
    <% @objectives.each do |objective| %>
    <%if !objective.completed_at.nil?%>
      <tr>
        <td class='completed_task'><%= objective.title %></td>
        <td><%= objective.category %></td>
        <td><%= link_to 'Mark As Incompleted', mark_as_incomplete_objective_path(objective), method: :post %></td>
        <td><%= link_to 'Show', objective %></td>
        <td><%= link_to 'Edit', edit_objective_path(objective) %></td>
        <td><%= link_to 'Destroy', objective, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

