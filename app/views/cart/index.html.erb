<h1>Cart#index</h1>
<p>Find me in app/views/cart/index.html.erb</p>

<table class='table'>
    <thead>
        <th>Title</th>
        <th>Image</th>
        <th>Quantity</th>
    </thead>
    <tbody>
        <%session[:cart].each do |id, qty|%>
        <%product = Product.find(id)%>
        <tr>
            <td><%=product.title%><br/><%=product.description%><br/><%=product.price%></td>
            <td><img src=<%=product.image_url%> class='small-image'></td>
            <td><%=qty%></td>
        </tr>
        <%end%>
    </tbody>
    
</table>
